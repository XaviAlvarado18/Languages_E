(* Lexer para Gramática No. 1 - Expresiones aritméticas simples para variables *)

(* Introducir cualquier header aqui *)

let delim = [' ''\t''\n']
let ws = delim+
let letter = ['A'-'Z''a'-'z']
let digit = ['0'-'9']
let id = (letter)(letter|digit)*
let plus = '+'
let times = '*'
let lparen = '('
let rparen = ')'

rule tokens = 
  | ws       { print('WHITESPACE') } 
  | id        
  | plus      
  | times       
  | lparen
  | rparen 

